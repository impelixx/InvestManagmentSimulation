{
	"compilerOptions": {
		"target": "es6",
    "jsx": "react-jsx",
		"module": "commonjs",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"outDir": "./dist"
	},
	"include": ["src/**/*", "vite.config.ts"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
